      <% Category.all.each do |category| %>
      <option value="<%= category.id %>"> <%= category.name %> </option>
      <% end %>
    </select>
  </div>
   <div>
    <label for="day_id">day_id</label><br />
    <input id="day_id" name="day_id" type="text" />
  </div>
   <div>
    <label for="desc">desc</label><br />
    <input id="desc" name="desc"  type="text" />
  </div>
  <div>
    <label for="day_id">timespan</label><br />
    <input id="timespan" name="timespan"  type="integer" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>

