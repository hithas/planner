<h1>Editing Category #<%= @category.id %></h1>

<form action="/categories/<%= @category.id %>/update">
  <div>
    <label for="name">name</label><br />
    <input id="name" name="name" value="<%= @category.name  %>" type="text" />
  </div>
  <div>
    <label for="color">color</label><br />
    <input id="color" name="color" value="<%= @category.color  %>" type="text" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>


