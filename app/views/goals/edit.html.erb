<h1>Editing Goal #<%= @goal.id %></h1>

<form action="/goals/<%= @goal.id %>/update">
  <div>
    <label for="name">name</label><br />
    <input id="name" name="name" value="<%= @goal.name  %>" type="text" />
  </div>
  <div>
    <label for="category_id">category_id</label><br />
    <input id="category_id" name="category_id" value="<%= @goal.category_id  %>" type="text" />
  </div>
   <div>
    <label for="desc">description</label><br />
    <input id="desc" name="desc" type="text" value="<%= @goal.desc  %>"/>
  </div>
  <div>
    <input type="submit">
  </div>
</form>


